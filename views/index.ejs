<%- include("header.ejs") %>
<body>
  <div>
    <h1>Blog Post</h1>
    <hr />
    <div class="text-center">
      <a href="/create"
        ><button class="btn btn-primary rounded-pill px-3" type="button">
          Create Post
        </button></a
      >
    </div>
  </div>
  <div class="form-body">
    <ol>
      <% posts.forEach((post, index) => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>

        <!-- delete -->
        <form action="/delete" method="post">
          <input type="hidden" name="index" value="<%= index %>" />
          <button
            type="submit"
            class="btn btn-danger rounded-pill px-3 mt-20"
            type="button"
          >
            delete
          </button>
        </form>

        <!-- Update -->
        <form action="/update" method="post">
          <input type="hidden" name="index" value="<%= index %>" />
          <div>
            <input
              type="text"
              name="title"
              value="<%= post.title %>"
              required
            />
          </div>
          <div>
            <textarea name="content" required><%= post.content %></textarea>
          </div>
          <button
            type="submit"
            class="btn btn-success rounded-pill px-3 mt-20"
            type="button"
          >
            Update
          </button>
        </form>
      </li>
      <% }) %>
    </ol>
  </div>
</body>

<%- include("footer.ejs") %>
